<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.paveway.lowest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.paveway.lowest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.paveway.lowest.GoodsDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="info.paveway.lowest.GoodsEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="info.paveway.lowest.PriceEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="info.paveway.lowest.ShopListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <provider
            android:name="info.paveway.lowest.data.GoodsProvider"
            android:authorities="info.paveway.lowest.data.goodsprovider"
            android:exported="false" />
        <provider
            android:name="info.paveway.lowest.data.PriceProvider"
            android:authorities="info.paveway.lowest.data.priceprovider"
            android:exported="false" />
        <provider
            android:name="info.paveway.lowest.data.ShopProvider"
            android:authorities="info.paveway.lowest.data.shopprovider"
            android:exported="false" />
    </application>

</manifest>
